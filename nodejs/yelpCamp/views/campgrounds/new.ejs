<%- include("../partials/header") %>

<div class="row">
  <h1 style="text-align: center;">create new campground</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/campgrounds" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="campground name">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image url">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="enter description">
      </div>
      <button class="btn btn-lg btn-primary btn-block">submit</button>
    </form>

    <a href="/campgrounds">go back to campgrounds</a>
  </div>
  </div>

<%- include("../partials/footer") %>
